<script>
	document.addEventListener("DOMContentLoaded", function () {
		function applyScrollAnimation(className, callback) {
			const elements = document.querySelectorAll(`.${className}`);

			const observer = new IntersectionObserver(
				(entries, observer) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							callback(entry.target);
							observer.unobserve(entry.target);
						}
					});
				},
				{ threshold: 0.5 }
			);

			elements.forEach((element) => observer.observe(element));
		}

		// Animation for #imageContent
		applyScrollAnimation("scroll-animate", (element) => {
			const target = element.querySelector("#target");
			if (target) {
				target.classList.add("scale-x-0", "translate-x-1/4");
			}
		});

		// Animation for #textContent
		applyScrollAnimation("scroll-fade-in", (element) => {
			const textElements = element.querySelectorAll(".tag");
			textElements.forEach((el) => {
				el.classList.remove("opacity-0", "translate-y-10");
			});
		});
	});
</script>
