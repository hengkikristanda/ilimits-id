<!DOCTYPE html>
<html lang="en">
	<%- include('../commonSections/head') %>

	<body>
		<%- include('../commonSections/navbar') %>

		<div class="max-w-screen-2xl mx-auto py-24">
			<div class="flex flex-col text-info horizontal-padding gap-8">
				<div class="article my-12">
					<h6 class="font-bold text-primary mb-2">Hedge Trading</h6>
					<h1 class="font-bold md:text-4xl"><%=content.heading%></h1>
					<div class="image-container border rounded border-line mb-12">
						<a href="https://my.ilimitsinv.com/en/register" target="_blank">
							<img src="/images/products/hedge-trading.jpeg" alt="" class="size-full" />
						</a>
					</div>

					<div class="flex flex-col lg:flex-row justify-center gap-20 mt-32">
						<div class="lg:w-1/2">
							<img src="/images/products/bull-bear.jpeg" alt="" class="size-full object-cover" />
						</div>
						<div class="lg:w-1/2 flex flex-col lg:items-end lg:text-end">
							<h3 class="uppercase font-bold text-primary flex lg:w-1/3"><%=content.heading%></h3>
							<p class="text-info"><%=content.subheading%></p>
						</div>
					</div>

					<div class="w-full max-w-[70rem] mx-auto mt-12">
						<img
							src="/images/products/why-hedge-trading.jpeg"
							alt=""
							class="size-full object-cover" />
					</div>

					<div class="flex justify-between mt-32">
						<div class="flex flex-col gap-4 lg:w-1/2 justify-center">
							<h3 class="font-bold text-primary"><%=content.overview.heading%></h3>
							<p class="text-info"><%=content.overview.content%></p>
							<ul>
								<% content.overview.benefits.forEach((item) => { %>
								<li>
									<i class="checkbox-icon icon-md bg-primary"></i>
									<p class="text-info"><%=item%></p>
								</li>
								<% }); %>
							</ul>
						</div>
						<div class="hidden lg:flex w-1/2 px-20">
							<i class="question-mark icon-30rem bg-primary/20"></i>
						</div>
					</div>

					<form>
						<div class="flex flex-col lg:flex-row justify-between py-12 md:py-20 gap-20 bg-primary/10 px-2 md:px-8 my-20">
							<div class="flex flex-col lg:w-1/2 px-6 lg:px-0">
								<p class="text-primary font-bold">iLimits HEDGE TRADING</p>
								<h1 class="font-semibold text-xl md:text-4xl mb-4 text-info">
									<%=content.cta.heading%>
								</h1>
								<h6 class="text-info"><%=content.cta.content%></h6>
							</div>

							<div class="flex flex-col lg:px-12 text-info horizontal-padding lg:w-1/2">
								<p class="text-primary font-bold mb-4">Get Started</p>
								<div
									class="flex flex-col sm:flex-row w-full max-w-[50rem] justify-center gap-2 mb-4">
									<input
										name="name"
										type="text"
										required
										class="input-sm w-full text-primary"
										placeholder="Your name" />
								</div>

								<div
									class="flex flex-col sm:flex-row w-full max-w-[50rem] justify-center gap-2 mb-4">
									<input
										name="email"
										type="email"
										class="input-sm w-full text-primary"
										placeholder="Email Address" />
								</div>

								<div
									class="flex flex-col sm:flex-row w-full max-w-[50rem] justify-center gap-2 mb-4">
									<input
										name="phoneNumber"
										type="text"
										class="input-sm w-full text-primary enforce-number"
										placeholder="Phone number" />
								</div>

								<div
									class="flex flex-col sm:flex-row w-full max-w-[50rem] justify-center gap-2 mb-4">
									<input
										name="investmentAmount"
										type="text"
										class="input-sm w-full text-primary enforce-number"
										placeholder="Investment Amount" />
								</div>

								<button class="btn btn-primary h-12 w-full" type="submit">
									<p><%=content.cta.buttonLabel%></p>
								</button>
							</div>
						</div>
					</form>

					<div class="flex flex-col">
						<div class="font-semibold mt-8 text-center md:px-20 py-8">
							<div class="flex flex-col items-center w-fit mx-auto mb-6">
								<h3><%=content.disclaimer.heading%></h3>
								<hr class="w-1/2 h-1 bg-primary" />
							</div>
							<p><%=content.disclaimer.content%></p>
						</div>
					</div>
				</div>
			</div>

			<%- include('../commonSections/footer') %>
		</div>
	</body>

	<script src="/js/commonUtils.js"></script>
</html>
